#:kivy 1.0.9

<VariableLayout>:
    variableType: None
    variableVal: None
    cimg_file: None
    nimg_file: None

    Label:
        text: root.variableType if root.variableType is not None else ""
        size_hint: (1, 0.1)

    Label
        text: root.variableVal if root.variableVal is not None else ""
        size_hint: (1, 0.1)

    Image:
        id: cimg
        source: root.cimg_file
        size_hint: (1, 0.4)

    Image:
        id: nimg
        source: root.nimg_file
        size_hint: (1, 0.4)
        opacity: 0.1

<GlobalLayout>:
    BoxLayout:
        orientation: "horizontal"
        size: root.width * 2/4, root.height

        spacing: 10

        VariableLayout:
            pos_hint: {"right":0.1}
            size: root.width * 1/3, root.height
            variableType: 'Block'
            variableVal: 'BTD'
            cimg_file: 'palm_stroke.png'
            nimg_file: 'palm_stroke.png'

        VariableLayout:
            pos_hint: {"right":0.1}
            size: root.width * 1/3, root.height
            variableType: 'Force'
            variableVal: 'BTD'
            cimg_file: 'force_light.png'
            nimg_file: 'force_medium.png'

        VariableLayout:
            pos_hint: {"right":0.1}
            size: root.width * 1/3, root.height
            variableType: 'Speed'
            variableVal: 'BTD'
            cimg_file: 'palm_tap.png'
            nimg_file: 'palm_stroke.png'



